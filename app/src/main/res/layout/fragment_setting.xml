<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:padding="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".fragment.videofragments.SettingFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar_setting"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!--        android:theme="@style/AppTheme.AppBarOverlay">-->

        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbar_setting"
            android:layout_width="match_parent"
            app:title="Setting"
            app:titleTextColor="@color/colorAccent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mainBackground"/>
        <!--            app:popupTheme="@style/AppTheme.PopupOverlay" />-->

    </com.google.android.material.appbar.AppBarLayout>

<LinearLayout
    android:layout_marginTop="5dp"
    android:padding="8dp"
    android:id="@+id/btn_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_bt_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="33dp"
        android:src="@drawable/ic_share"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
       android:layout_gravity="center"
        android:text="Share"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_bt_share"
        app:layout_constraintTop_toBottomOf="@+id/appbar_setting" />
</LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/bt_mode"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:background="@color/float_btn_color"
            android:id="@+id/image_bt_mode"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="33dp"
            android:src="@drawable/ic_round_day"
           />
        <TextView
            android:id="@+id/textView"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="Appearance"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </LinearLayout>

   <LinearLayout
       android:layout_marginTop="5dp"
       android:id="@+id/btn_about"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="8dp"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/image_bt_about"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_marginStart="33dp"
           android:src="@drawable/ic_about"
          />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="About"
           android:layout_marginStart="100dp"
           android:textStyle="bold"

       />

   </LinearLayout>





</LinearLayout>